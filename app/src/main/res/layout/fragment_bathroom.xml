<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.zspcompany.smarthome.fragment.BathroomFragment">


    <Switch
        android:id="@+id/Bsw1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Connect to Server"
        android:textStyle="bold" />


    <Switch
        android:id="@+id/Bsw2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:text="Bathroom Lamp1"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bsw3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bathroom Lamp2"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bsw4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bathroom fan"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bsw5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bathroom Electronic Device "
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bsw6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Toilet Lamp "
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bsw7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Toilet Device"
        android:textStyle="bold" />


</LinearLayout>
