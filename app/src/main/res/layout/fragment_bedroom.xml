<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="info.zspcompany.smarthome.fragment.BedroomFragment">


    <Switch
        android:id="@+id/Bdsw1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:text="Connect to Server"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bdsw2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:enabled="false"
        android:text="Bedroom Lamp1"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bdsw3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bedroom Lamp2"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bdsw4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bedroom Shade1"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bdsw5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bedroom Shade2"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/Bdsw6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bedroom Electronic Device"
        android:textStyle="bold" />
    <Switch
        android:id="@+id/Bdsw7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:enabled="false"
        android:text="Bedroom Tv"
        android:textStyle="bold" />

</LinearLayout>
